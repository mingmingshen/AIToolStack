# Docker deployment environment variables example
# Copy this file to .env and modify as needed

# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# MQTT configuration
MQTT_ENABLED=true
MQTT_USE_BUILTIN_BROKER=true
MQTT_PORT=1883
MQTT_BUILTIN_PORT=1883
# If using external MQTT Broker, configure the following
# MQTT_USE_BUILTIN_BROKER=false
# MQTT_BROKER=your-mqtt-broker-host
# MQTT_USERNAME=your-username
# MQTT_PASSWORD=your-password

# Database configuration
DATABASE_URL=sqlite:////app/backend/data/annotator.db

# File storage configuration
DATASETS_ROOT=/app/datasets
MAX_IMAGE_SIZE_MB=10
